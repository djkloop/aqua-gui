@import '../color/color.styl';

.aqua-gui
  &-container

  &-header
    box-shadow 0 2px 8px $box-shadow-color
    h1
      margin 0
      float left
      font-size 32px
      font-weight 400
      line-height 60px
      a
        color #333
        text-decoration none
        display block

      span
        font-size 12px
        display inline-block
        vertical-align top
        margin -5px 0 0 5px
        color $hover-color

    &-logo
      vertical-align sub
      line-height 60px

  &-main
    padding 20px

    &-core
      box-shadow 0 2px 8px $box-shadow-color
      height 100%

      .ghost
        background #fff
        border 1px dashed $primary-color
        &::after
          background #fff

      li.ghost
        position relative
        line-height 30px
        font-size 0
        &::after
          content '放到这里'
          display block
          background #fff
          position absolute
          left 50%
          margin-left -32px
          top 0
          font-size 16px
          color #999
          z-index 10

      &-area
        height 100%
        padding-left 24px
        padding-top 20px;

        &-item
          margin 0
          position relative
          padding 10px

          &.active
            background #d8e8fa

          .el-row,
          .el-col
            min-height 30px
            border 1px dashed #4388ea
            background: #fff;

          .el-row
            width 100%

          // &-col
          //   background greenyellow

  &-aside
    &-left,
    &-right
      height calc(100vh - 100px)
      overflow-y auto
      box-shadow 0 2px 8px $box-shadow-color

    &-component
      padding 8px 0

      &-title
        padding 8px 12px
        font-size 14px
      &-box
        display flex
        flex-wrap wrap
        align-content flex-start
        padding 0 8px
      &-item
        margin 2.5px 2px
        flex 0 0 48%;
        height 30px
        line-height 30px
        border 1px solid $background-white
        font-size 12px
        color #333
        text-align center
        white-space nowrap
        text-overflow ellipsis
        overflow hidden
        &:hover
          color $hover-color
          border 1px dashed $hover-color
        &>a
          display block
          cursor move
          background $background-white
